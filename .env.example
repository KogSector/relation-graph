# Microservice: relation-graph
# Unified Knowledge Graph Service - Neo4j + Vector Hybrid Engine

# =============================================================================
# Core Service Configuration
# =============================================================================
PORT=3018
HOST=0.0.0.0
RUST_LOG=relation_graph=info,tower_http=debug

# =============================================================================
# Neo4j AuraDB Graph Database
# =============================================================================
NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password_here
NEO4J_DATABASE=neo4j

# =============================================================================
# Zilliz Cloud Vector Database
# =============================================================================
ZILLIZ_ENDPOINT=https://your-instance.cloud.zilliz.com
ZILLIZ_API_KEY=your_api_key_here
ZILLIZ_COLLECTION=knowledge_vectors
VECTOR_DIMENSION=1024

# =============================================================================
# PostgreSQL (relationship evidence & metadata)
# =============================================================================
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# =============================================================================
# Downstream Service URLs (configurable for cloud deployment)
# =============================================================================
EMBEDDING_SERVICE_URL=http://localhost:8082
CHUNKER_SERVICE_URL=http://localhost:3017
DATA_CONNECTOR_SERVICE_URL=http://localhost:3013

# =============================================================================
# Cross-Source Linking Configuration
# =============================================================================
SIMILARITY_THRESHOLD=0.75
MAX_CROSS_LINKS_PER_CHUNK=5
ENABLE_TEMPORAL_PROXIMITY=true
ENABLE_EXPLICIT_MENTIONS=true
ENABLE_AUTHOR_OVERLAP=true
TEMPORAL_PROXIMITY_DAYS=7

# =============================================================================
# Graph Traversal Configuration
# =============================================================================
MAX_GRAPH_HOPS=2
MAX_ENTITIES_PER_TRAVERSAL=50

# =============================================================================
# Redis (optional caching)
# =============================================================================
# REDIS_URL=rediss://user:password@host:port
